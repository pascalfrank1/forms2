<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">                                                                                                                                                                                               
    <SelectDialog                                                                                                                                                                                                                                              
        id="selectDialog"                                                                                                                                                                                                                                      
        title="Products"                                                                                                                                                                                                                                       
        items="{path: 'main>/substitutes', parameters:{operationMode:'Client'}}"                                                                                                                                                                               
        confirm=".onValueHelpClose"                                                                                                                                                                                                                            
        cancel=".onValueHelpClose"                                                                                                                                                                                                                             
        search=".onValueHelpSearch">                                                                                                                                                                                                                           
        <StandardListItem                                                                                                                                                                                                                                      
            title="{= ${main>firstName} + ' ' + ${main>lastName}}"                                                                                                                                                                                             
            description="{main>employeeNumber}" />                                                                                                                                                                                                             
    </SelectDialog>                                                                                                                                                                                                                                            
</core:FragmentDefinition>                                                                                                                                                                                                                                     