<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">                                                                                                                                                                                               
    <Dialog resizable="true" draggable="true" showHeader="false">                                                                                                                                                                                              
        <List id="noteList"                                                                                                                                                                                                                                    
            headerText="Notizen"                                                                                                                                                                                                                               
            noDataText="Keine Notizen vorhanden"                                                                                                                                                                                                               
            items="{shared>/notes}" updateFinished="updateFinished">                                                                                                                                                                                           
            <FeedListItem                                                                                                                                                                                                                                      
                highlight="{=${shared>approvalStep} === -1 ? 'Error' : 'Success'}"                                                                                                                                                                             
                iconActive="false"                                                                                                                                                                                                                             
                showIcon="false"                                                                                                                                                                                                                               
                sender="{shared>from}"                                                                                                                                                                                                                         
                info="{path: 'shared>approvalStep', formatter: '.formatStep'}"                                                                                                                                                                                 
                timestamp="{= ${shared>timestamp}.toLocaleString()}"                                                                                                                                                                                           
                text="{shared>message}"                                                                                                                                                                                                                        
                convertLinksToAnchorTags="All">                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
            </FeedListItem>                                                                                                                                                                                                                                    
        </List>                                                                                                                                                                                                                                                
        <endButton>                                                                                                                                                                                                                                            
            <Button text="SchlieÃŸen" press="closeNotes" />                                                                                                                                                                                                     
        </endButton>                                                                                                                                                                                                                                           
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     